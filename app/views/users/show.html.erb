<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.microposts.count>0  %>
  <p>
    <strong>First Micropost:</strong>
    <%= @user.microposts.first.content %> on <%= @user.microposts.first.updated_at %>
  </p>
<% else %>
    <p>
      <strong>No Microposts found</strong>
    </p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
